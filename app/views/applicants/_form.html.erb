<div class="row">
	<div class="col-md-6 col-md-offset-3">
<%= form_for([@applicant.user,@applicant],:class=>"form") do |f| %>
<% if @applicant.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@applicant.errors.count, "error") %> prohibited this applicant from being saved:</h2>

	<ul>
		<% @applicant.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :applicant_name,{:class=>"label label-primary"} %>
	<br />
	<%= f.text_field :applicant_name,{:class=>"form-control",:placeholder=>"Enter your full name"}%>
</div>
<div class="form-group">
	<%= f.label :applicant_nrc ,{:class=>"label label-primary"}%>
	<br />
	<%= f.text_field :applicant_nrc,{:class=>"form-control",:placeholder=>"Enter your NRC number"} %>
</div>
<div class="form-group">
	<%= f.label :photo ,{:class=>"label label-primary"}%><br />
	<%= f.file_field :photo %>
</div>

<div class="form-group">
	<%= f.label :applicant_contact_email,{:class=>"label label-primary"} %>
	<br />
	<%= f.text_field :applicant_contact_email,{:class=>"form-control",:placeholder=>"Enter your contact email"} %>
</div>
<div class="form-group">
	<%= f.label :applicant_gender ,{:class=>"label label-primary"}%>
	<br />
	<%= f.radio_button :applicant_gender, 'male', :checked => 'checked',:class=>'radio-inline' %>Male
	<%= f.radio_button :applicant_gender, 'female',:class=>'radio-inline' %>Female
</div>



<div class="form-group">
	<%= f.label :applicant_marital_status,{:class=>"label label-primary"}%><br />
	<%= f.radio_button :applicant_marital_status, 'married', :checked => 'checked',:class=>'radio-inline' %>Married
	<%= f.radio_button :applicant_marital_status, 'single',:class=>'radio-inline'%>Single
</div>
<div class="form-group">
	<%= f.label :applicant_dob,{:class=>"label label-primary"} %>
	<%= f.text_field :applicant_dob ,{'data-behavior' => 'datepicker',:class=>"form-control dpk"}%>
</div>
<div class="form-group">
	<%= f.label :applicant_address,{:class=>"label label-primary"} %>
	<br />
	<%= f.text_field :applicant_address ,{:class=>"form-control",:placeholder=>"Enter your address"}%>
</div>
<div class="form-group">
	<%= f.label :applicant_phone_number,{:class=>"label label-primary"} %>
	<br />
	<%= f.text_field :applicant_phone_number ,{:class=>"form-control",:placeholder=>"Enter your phone number"}%>
</div>
<div class="form-group">
	<%= f.label :applicant_language,{:class=>"label label-primary"} %>
	<br />
	<%= f.text_field :applicant_language,{:class=>"form-control",:placeholder=>"Enter the languages you can speak fluently"} %>
</div>
<div class="form-group">
	<%= f.label :applicant_skills,{:class=>"label label-primary"} %>
	<br />
	<%= f.text_area :applicant_skills,{:class=>"form-control",:placeholder=>"Enter your skills and specialities"} %>
</div>
<div class="form-group">
	<%= f.label :applicant_description,{:class=>"label label-primary"} %>
	<br />
	<%= f.text_area :applicant_description,{:class=>"form-control",:placeholder=>"Write a brief description about you"}%>
</div>
<%= f.hidden_field :user_id %>
<div class="actions">
	<%= f.submit "Submit",:class=>"btn btn-primary" %>
</div>
<% end %>
</div></div>
