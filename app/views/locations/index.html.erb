<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= link_to 'Show', user_location_path(:user_id=>current_user.id,:id=>location.id) %></td>
    <td><%= link_to 'Edit', edit_user_location_path(:user_id=>current_user.id,:id=>location.id) %></td>
    <td><%= link_to 'Destroy', user_location_path(:user_id=>current_user.id,:id=>location.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @locations, :renderer=> BootstrapPagination::Rails %>
<%= link_to 'New Location', new_user_location_path(current_user) %>

<%= sidebar_chooser(current_user)%>
