    <%= f.text_field :job_title,{:class=>"form-control",:placeholder=>"Enter the job title you worked with"} %>
  </div>
  <div class="field">
    <%= f.label :address ,{:class=>"label label-primary"}%><br />
    <%= f.text_area :address,{:class=>"form-control",:placeholder=>"Enter the address of the company"} %>
  </div>
  <div class="field">
    <%= f.label :start_date ,{:class=>"label label-primary"}%><br />
    <%= f.date_select :start_date ,{:class=>"form-control"}%>
  </div>
  <div class="field">
    <%= f.label :end_date ,{:class=>"label label-primary"}%><br />
