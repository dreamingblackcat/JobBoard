

 <div class="container">
            <header class="row">
              <div class="col-md-8">
              	<p id="notice" class="form-error"><%= notice %></p>
                <h1 class="company-name"><%= @company.com_name %></h1>
                <div class="company-logoname">
                  <%= @company.com_logo_name %>
                </div>
              </div>
              <div class="col-md-3 col-md-offset-1 company-logo">
                <%= image_tag @company.photo.url(:medium),:class=>"img-rounded pull-right box-shadow-pay-gray",:width=>"100px",:height=>"100px"%>
              </div>
            </header>
            <article class="company-meta-data">
              <section class="row">
                <div class="col-md-8 company-description">
                  <h4>About</h4>
                  <section>
                    <%= @company.com_description %>
                  </section>
                </div>
              </section>
              <br/>
              <section class="company-contact-info">
                <div class="company-email">Email : <%= @company.com_email %></div>
                <div class="company-weburl">Website : <%= link_to @company.com_web_url, @company.com_web_url %></div>
                <div class="company-phone-number">Phone: <%= @company.com_phone_number %></div>
                <div class="company-faxnumber">Fax: <%= @company.com_fax_number %></div>
                <div class="company-address">
                  <h4>Address</h4>
                  <%= @company.com_address %>
                </div>
              </section>
              <%= link_to 'Edit', edit_user_company_path(@company.user,@company) %>
            </article>
            <hr/>
            <hr />
            <article class="company-own-jobpost">
              <h3>Job Posts by AWITD Company</h3>
              <table class="table">

              <!-- Table header -->
            
              <thead>
                <tr>
                  <th scope="col">Job Type</th>
                
                  <th scope="col">Job Title</th>

                  <th scope="col">Company</th>
                
                  <th scope="col">Start Date</th>
                  
                  <th scope="col">End Date</th>
                
                  <th scope="col">Location</th>
                  <th scope="col">Delete</th>
                </tr>
              </thead>
            
              <!-- Table footer -->
            
              <tfoot>
               <%= will_paginate @job_posts, :renderer=> BootstrapPagination::Rails %>
              </tfoot>
            
              <!-- Table body -->
            
              <tbody>
              	<%@job_posts.each do |jp|%>
                <tr>
                  <td><%= jp.job_type%></td>
                  <td><%= link_to "#{jp.job_post_title}",[@company.user,@company,jp]%></td>
                  <td><%= link_to "#{jp.company.com_name}",[@company.user,@company]%></td>
                  <td><%= jp.job_post_start_date%></td>
                  <td><%= jp.job_post_end_date%></td>
                  <td><%= jp.location_id %></td>
        			<td><%= link_to "Destroy",jp,:method=>:delete,:data=> { confirm: 'Are you sure?' }%></td>
                <%end%>
              </tbody>

            </table>
            </article>          
          </div>
          <%case current_user.role%>
          <%when "company"%> 
          	<% content_for :right_bar do%>
                 <%=unless @company.nil? then link_to 'Post a new Job', new_user_company_job_post_path({:user_id=>@company.user.id,:company_id=>@company.id}),:class=>'btn btn-warning' end%>
		  	<%end%>
		  
		  <%else%>
			<% content_for :left_bar do %>
			<nav>
				<ul class="sidenav-ul">
					<%= link_to 'Edit Profile', edit_user_applicant_path({:user_id=>@applicant.user,:id=>@applicant}),:class=>"btn btn-primary btn-lg btn-block" %>
					<%= link_to 'Edit Preferences',user_applicant_applicant_job_preferences_path(@applicant.user,@applicant),:class=>"btn btn-primary btn-lg btn-block"%>
					<%= link_to 'Job Histories', user_applicant_applicant_job_histories_path(@applicant.user,@applicant),:class=>"btn btn-primary btn-lg btn-block"%>
					<a href="#" class="btn btn-primary btn-lg btn-block">Education</a>
				</ul>
			</nav>	
			<%end%>
			<% content_for :right_bar do %>
				<ul class="sidenav-ul">
			          <li><a href="#" class="btn btn-warning">Prepare CV </a></li>
			          <li><a href="#" class="btn btn-info">View my applied jobs </a></li>
			          <li><a href="#" class="btn btn-success">Recommended jobs</a></li>
			     </ul>
			<%end%>
		<%end%>
