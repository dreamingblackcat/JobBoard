<h1>Listing companies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Logo Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Web Site</th>
    <th>Phone</th>
    <th>Fax</th>
    <th>Description</th>
    <th>Emage Url</th>
    <!--<th>User</th>-->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr style="background-color: <%= cycle("#EBEBEB", "c5c5c5") %>">
    <td><%= company.com_name %></td>
    <td><%= company.com_logo_name %></td>
    <td><%= company.com_email %></td>
    <td><%= company.com_address %></td>
    <td><%= company.com_web_url %></td>
    <td><%= company.com_phone_number %></td>
    <td><%= company.com_fax_number %></td>
    <td><%= company.com_description %></td>
    <td><%= company.com_logo_image_url %></td>
    <!--<td><%= company.user_id %></td>-->
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

