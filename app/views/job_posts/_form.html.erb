<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for([@company.user,@company,@job_post],:class=>"form") do |f| %>
  <% if @job_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job_post.errors.count, "error") %> prohibited this job_post from being saved:</h2>

      <ul>
      <% @job_post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :job_post_title ,{:class=>"label label-primary"}%><br />
    <%= f.text_field :job_post_title,{:class=>"form-control",:placeholder=>"Job Title"}%>
  </div>
  <div class="form-group">
    <%= f.label :job_type,{:class=>"label label-primary"} %><br />
    <%= f.select :job_type,["Full Time","Part Time","Freelance","Internship","Temporary"],{},{:class=>"form-control"}%>
  </div>
  
  <div class="form-group">
    <%= f.label :job_post_gender,{:class=>"label label-primary"} %><br />
    <%= f.radio_button :job_post_gender,'male',:checked=>'checked',:class=>'radio-inline' %>Male
    <%= f.radio_button :job_post_gender,'female',:class=>'radio-inline' %>Female
    <%= f.radio_button :job_post_gender,'both',:class=>'radio-inline' %>Both
  </div>
  <div class="form-group">
    <%= f.label :job_post_description,{:class=>"label label-primary"} %><br />
    <%= f.text_area :job_post_description ,{:class=>"form-control",:placeholder=>"Briefly describe about your job"}%>
  </div>
  <div class="form-group">
    <%= f.label :job_post_start_date,{:class=>"label label-primary"} %><br />
    <%= f.text_field :job_post_start_date ,{'data-behaviour' => 'datepicker',:class=>"form-control dpk"}%>
  </div>
  <div class="form-group">
    <%= f.label :job_post_end_date,{:class=>"label label-primary"} %><br />
    <%= f.text_field :job_post_end_date ,{'data-behavior' => 'datepicker',:class=>"form-control dpk"}%>
  </div>
  <div class="form-group">
    <%= f.label :job_post_basic_salary,{:class=>"label label-primary"} %><br />
    <%= f.number_field :job_post_basic_salary,{:class=>"form-control",:placeholder=>"Probable Basic Salary"} %>
  </div>
  <div class="form-group">
    <%= f.label :job_post_requirement ,{:class=>"label label-primary"}%><br />
    <%= f.text_area :job_post_requirement ,{:class=>"form-control",:placeholder=>"Briefly describes requirements for your job"}%>
  </div>
  <div class="form-group">
    <%= f.label :category_id,"Category" ,{:class=>"label label-primary"}%><br />
    <%= f.select :category_id, Category.all_for_select,{},{:class=>"form-control"} %>
  </div>
   <div class="form-group">
    <%= f.label :location_id,"Location" ,{:class=>"label label-primary"}%><br />
    <%= f.select :location_id, Location.all_for_select,{},{:class=>"form-control"} %>
  </div><br/>
  <div class="actions">
    <%= f.submit "Submit",:class=>"btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
