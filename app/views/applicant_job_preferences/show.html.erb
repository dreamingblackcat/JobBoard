<p id="notice"><%= notice %></p>
<h1 class="text-center text-primary">Edit your job preferences</h1>

<p>
  <b>Prefer job time:</b>
  <%= @applicant_job_preference.prefer_job_time %>
</p>

<p>
  <b>Prefer start available:</b>
  <%= @applicant_job_preference.prefer_start_available %>
</p>

<p>
  <b>Prefer expected salary:</b>
  <%= @applicant_job_preference.prefer_expected_salary %>
</p>

<p>
  <b>Applicant:</b>
  <%= link_to "#{@applicant_job_preference.applicant.applicant_name}", [@applicant_job_preference.applicant.user,@applicant_job_preference.applicant] %>
</p>

<p>
  <b>Location:</b>
  <%= @applicant_job_preference.location.name %>
</p>


<%= link_to 'Edit', edit_user_applicant_applicant_job_preference_path({:user_id=>@applicant_job_preference.applicant.user.id,:applicant_id=>@applicant_job_preference.applicant.id,:id=>@applicant_job_preference.id}) %> |


<% content_for :left_bar do %>
	<nav>
		<ul class="sidenav-ul">
			<%= link_to 'View Profile', user_applicant_path({:user_id=>@applicant.user,:id=>@applicant}),:class=>"btn btn-primary btn-lg btn-block" %>
			<%= link_to 'Edit Preferences',user_applicant_applicant_job_preferences_path(@applicant.user,@applicant),:class=>"btn btn-primary btn-lg btn-block"%>
			<%= link_to 'Job Histories', user_applicant_applicant_job_histories_path(@applicant.user,@applicant),:class=>"btn btn-primary btn-lg btn-block"%>
			<a href="#" class="btn btn-primary btn-lg btn-block">Education</a>
		</ul>
	</nav>	
<%end%>
<% content_for :right_bar do %>
	<ul class="sidenav-ul">
          <li><a href="#" class="btn btn-warning">Prepare CV </a></li>
          <li><a href="#" class="btn btn-info">View my applied jobs </a></li>
          <li><a href="#" class="btn btn-success">Recommended jobs</a></li>
     </ul>
<%end%>
